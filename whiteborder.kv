#:kivy 1.0.9
#:import utils kivy.utils

<Button>:
    font_size: 20
    size: 50, 25

<WhiteBorder>:

    white_border_size: white_border_size
    top_bottom_black_size: top_bottom_black_size
    left_right_black_size: left_right_black_size
    image: image

    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#FFFDD0')
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols:2
        size: root.width - 10, root.height - 10
        pos: 5, 5

        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#92A1B3')
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            id: image
            text: "Picture"

        GridLayout:
            cols: 2
            row_force_default: True
            row_default_height: 25

            Label:
                text: "Load Image"

            Button:
                text: "Load"
                on_press: root.load()



            Label:
                text: "White border size"
                size: 50, 25

            TextInput:
                id: white_border_size
                multiline: False



            Label:
                text: "Black border vertical size"
                size: 50, 25

            TextInput:
                id: top_bottom_black_size
                multiline: False



            Label:
                text: "Black border horizontal size"
                size: 50, 25
                
            TextInput:
                id: left_right_black_size
                multiline: False



            Button:
                text: "Preview"
                on_press: root.preview()

            Button:
                text: "Save"
                on_press: root.save()